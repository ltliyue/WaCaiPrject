<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#f04a3a" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="记一记"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <!-- <TextView -->
        <!-- android:id="@+id/tj" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_alignParentRight="true" -->
        <!-- android:layout_centerVertical="true" -->
        <!-- android:paddingLeft="10dp" -->
        <!-- android:paddingRight="20dp" -->
        <!-- android:text="添加" -->
        <!-- android:textColor="#ffffff" -->
        <!-- android:textSize="18sp" /> -->

        <ImageView
            android:id="@+id/wc"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/sure"
            android:visibility="visible" />
    </RelativeLayout>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/cp_top_bg"
        android:checkedButton="@+id/r_zx"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/a"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_normal"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="支出"
            android:textColor="@drawable/cangpin_text_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#C3B59A"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/b"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_normal"
            android:button="@null"
            android:gravity="center"
            android:text="收入"
            android:textColor="@drawable/cangpin_text_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#C3B59A"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/c"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_normal"
            android:button="@null"
            android:gravity="center"
            android:text="转账"
            android:textColor="@drawable/cangpin_text_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#C3B59A"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/d"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_normal"
            android:button="@null"
            android:gravity="center"
            android:text="借贷"
            android:textColor="@drawable/cangpin_text_color"
            android:textSize="14sp" />
    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/money"
                android:layout_width="fill_parent"
                android:inputType="phone"
                android:layout_height="wrap_content"
                android:hint="0.00" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="类型"
                    android:textColor="#6B4C3A"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_edit"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_zh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="账户"
                    android:textColor="#6B4C3A"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/zh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_edit"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_zhft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:text="账户"
                    android:textColor="#6B4C3A"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/zhf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/tab_edit"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="转到"
                    android:textColor="#6B4C3A"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/zht"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/tab_edit"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_sj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="商家"
                    android:textColor="#6B4C3A"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_edit"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_zqr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="债权人"
                    android:textColor="#6B4C3A"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/zqr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_edit"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="时间"
                    android:textColor="#6B4C3A"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/tab_edit"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/fz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/tab_edit"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="备注"
                    android:textColor="#6B4C3A"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/bz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_edit"
                    android:maxLines="10"
                    android:minLines="3"
                    android:paddingLeft="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>