<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loading_splash"
        android:orientation="vertical"
        android:padding="16dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt2"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/shape_left_radius_color_duijiao"
                android:gravity="center"
                android:text="小菜号"
                android:textColor="#008dbc"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/txt1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignBottom="@id/txt2"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/txt2"
                android:background="@drawable/shape_right_radius_color_duijiao"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="地图"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/txt3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignRight="@id/txt1"
                android:layout_below="@id/txt1"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_left_radius_color_duijiao"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2~6°C"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/txt4"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_alignLeft="@id/txt2"
                android:layout_below="@id/txt2"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/txt3"
                android:background="@drawable/shape_right_radius_color_duijiao"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="优惠"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>